{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": [
			"esnext"
		],
		"moduleResolution": "node",
		"sourceMap": true,
		"noEmit": true,
		"strict": true,
		"target": "es5",
		"experimentalDecorators": true,
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}
